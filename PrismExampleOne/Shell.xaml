<Window x:Class="PrismExampleOne.Shell"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:prism="http://www.codeplex.com/prism"
        Title="Prism Application" SizeToContent="WidthAndHeight">
    
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="300"></ColumnDefinition>
            <ColumnDefinition Width="Auto"></ColumnDefinition>
        </Grid.ColumnDefinitions>
        <ContentControl Grid.Column="0" Name="SidebarRegion" prism:RegionManager.RegionName="SidebarRegion"></ContentControl>
        <ContentControl Grid.Column="1" Padding="5px" 
                        Name="MainRegion" prism:RegionManager.RegionName="MainRegion"></ContentControl>
    </Grid>
    
</Window>
