<UserControl x:Class="OGV2P.AgendaModule.Views.AgendaStartView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:tk="http://schemas.xceed.com/wpf/xaml/toolkit"
             xmlns:gif="http://wpfanimatedgif.codeplex.com"
             xmlns:wf="clr-namespace:System.Windows.Forms;assembly=System.Windows.Forms"
             xmlns:input="clr-namespace:System.Windows.Input;assembly=System"
             mc:Ignorable="d"
             d:DesignHeight="900" d:DesignWidth="800" Name="host">
    <UserControl.Resources>
        <Style TargetType="UserControl">
            <Setter Property="Margin" Value="10" />
        </Style>
    </UserControl.Resources>
    <UserControl.InputBindings>
        <KeyBinding Key="Space" Modifiers="Shift" Command="{Binding StampItem}" CommandParameter="{Binding SelectedItem}" />
    </UserControl.InputBindings>
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>

        <!-- Meeting Meta Data Grid -->
        <Grid Grid.Row="0">
            <Grid.RowDefinitions>
                <RowDefinition  Height="Auto" />
                <RowDefinition Height="Auto" />
            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="150" />
                <ColumnDefinition />
                <ColumnDefinition Width="150" />
            </Grid.ColumnDefinitions>

            <Label Grid.Column="0" Content="Meeting Name:" />
            <ScrollViewer Grid.Column="1" HorizontalScrollBarVisibility="Auto"
                          VerticalScrollBarVisibility="Disabled">
                <TextBox  x:Name="txtMeetingName" IsReadOnly="True"
                          Margin="0 0 5 0" Text="{Binding MeetingName}" />
            </ScrollViewer>
            <tk:SplitButton Name="agendaCommandDropDown"
                        Click="agendaCommandDropDown_Click"
                            Background="#428bca"
                        Grid.Column="2" Content="Get Agenda File" Margin="5">
                <tk:SplitButton.DropDownContent>
                    <ItemsControl>
                        <Button Margin="5"
                       Style="{StaticResource RoundedButton}"
                             Click="GetAgendaFromServer_Click">Get Agenda From Server</Button>

                        <Button  Click="GetAgendaFromFile_Click" Margin="5"
                        Style="{StaticResource RoundedButton}">Open Agenda File</Button>

                        <Button  Margin="5"
                        Style="{StaticResource RoundedButton}"
                            Click="SaveAgenda_Click" >Save the Agenda</Button>

                        <Button Margin="5"
                        Style="{StaticResource RoundedButton}"
                             Command="{Binding ClearStampsCommand}">Clear All Timestamps</Button>
                    </ItemsControl>
                </tk:SplitButton.DropDownContent>
            </tk:SplitButton>

            <Label Grid.Row="1" Grid.Column="0" Content="Meeting Date:" />
            <DatePicker Grid.Column="1"  Grid.Row="1" Grid.ColumnSpan="1" Focusable="False" IsHitTestVisible="False"
                        SelectedDateFormat="Long"
                                SelectedDate="{Binding MeetingDate}"
                                VerticalContentAlignment="Center"
                                VerticalAlignment="Center"
                  FirstDayOfWeek="Monday" />
            <StackPanel Orientation="Horizontal" Grid.Column="2"
                        Grid.Row="1" HorizontalAlignment="Center">
                <Button Name="cmdUp" Click="floaterMoveUp_Click"
                        Margin="5"
                        Width="35" Height="35"
                        Background="Transparent"
                        Grid.Row="0" Grid.Column="1">
                    <Button.Content>
                        <Image Source="/OGV2P.Agenda;component/Play1Hot11.png"></Image>
                    </Button.Content>
                </Button>
            <Button Name="cmdDown" Margin="5"
                        Click="floaterMoveDown_Click"
                        Width="35" Height="35"
                        Grid.Row="2" Grid.Column="1" Background="Transparent">
                    <Button.Content>
                        <Image Source="/OGV2P.Agenda;component/Play1Hot1.png"></Image>
                    </Button.Content>
            </Button>
            </StackPanel>
        </Grid>

        <!-- Windows forms tree Grid -->
        <Grid Grid.Row="1">
            <Grid.RowDefinitions>
                <RowDefinition Height="*" />
                <RowDefinition Height="auto" />
                <RowDefinition Height="auto" />
                <RowDefinition Height="auto" />
            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="100" />
                <ColumnDefinition Name="layoutKeyColumn" />
                <ColumnDefinition Width="125" />
            </Grid.ColumnDefinitions>

            <DockPanel Name="hostCanvas" Grid.Row="0" Grid.Column="0"
                    Grid.ColumnSpan="3" LastChildFill="True"
                       Background="LightBlue" Margin="10">
                <WindowsFormsHost Name="winFormHost"
                          Background="Blue"
                              FontSize="16" HorizontalAlignment="Stretch"
                              VerticalAlignment="Stretch">

                    <wf:Panel Name="winFormHostPanel" Dock="Fill">
                    </wf:Panel>
                </WindowsFormsHost>
            </DockPanel>
            
        </Grid>

        <!-- Current node editable field grid-->
        <Grid Grid.Row="2">
            <Grid.RowDefinitions>
                <RowDefinition />
                <RowDefinition />
            </Grid.RowDefinitions>

            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="100" />
                <ColumnDefinition />
            </Grid.ColumnDefinitions>

            <Label Grid.Row="0" Grid.Column="0">Title:</Label>
            <ScrollViewer
                    Grid.Row="0" Grid.Column="1" Grid.ColumnSpan="2"
                    VerticalScrollBarVisibility="Disabled" HorizontalScrollBarVisibility="Auto">
                <TextBox x:Name="txtTitle"
                         HorizontalAlignment="Stretch"
                         Text="{Binding SelectedItem.Title}"
                         KeyDown="txtTitle_KeyDown"></TextBox>
            </ScrollViewer>

            <Label Grid.Row="1" Grid.Column="0">Description:</Label>
            <ScrollViewer Grid.Row="1" Grid.Column="1" Grid.ColumnSpan="2"
                      VerticalScrollBarVisibility="Disabled" HorizontalScrollBarVisibility="Auto">
                <TextBox Text="{Binding SelectedItem.Description}"
                         HorizontalAlignment="Stretch"
                     x:Name="txtDescription" AllowDrop="True"
                     KeyDown="DescriptionBox_KeyDown" />
            </ScrollViewer>
        </Grid>
    </Grid>
</UserControl>