<Window x:Class="OGV2P.Shell"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:cal="http://www.codeplex.com/prism"
        Title="OGV2 - P" Height="350" Width="525">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>
        
        <Grid.RowDefinitions>
            <RowDefinition />
        </Grid.RowDefinitions>

        <ContentControl Grid.Column="0" VerticalAlignment="Center" HorizontalAlignment="Center" Name="SideBarRegion" cal:RegionManager.RegionName="SideBarRegion" Background="AliceBlue" />
        <ContentControl Grid.Column="1" VerticalAlignment="Center" HorizontalAlignment="Center" Name="MainRegion" cal:RegionManager.RegionName="MainRegion" />

    </Grid>
</Window>
