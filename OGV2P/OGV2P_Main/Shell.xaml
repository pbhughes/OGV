<Window x:Class="OGV2P.Shell"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:cal="http://www.codeplex.com/prism"
        Title="OGV2 - P" Width="800" Height="600">
    <Window.Resources>
        <Style TargetType="ContentControl">
            <Setter Property="Margin" Value="10"/>
            <Setter Property="Width" Value="Auto"/>
        </Style>
    </Window.Resources>
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition  Width="auto"/> 
            <ColumnDefinition  Width="*"/>
        </Grid.ColumnDefinitions>
        
        <Grid.RowDefinitions>
            <RowDefinition />
        </Grid.RowDefinitions>
        
        <GridSplitter Grid.Column="1" HorizontalAlignment="Left" Width="3" >
        </GridSplitter>

        <ScrollViewer HorizontalScrollBarVisibility="Hidden">
            <ContentControl Grid.Column="0" VerticalAlignment="Center"
                        HorizontalAlignment="Center" Name="SideBarRegion" 
                        cal:RegionManager.RegionName="SideBarRegion"
                        Background="AliceBlue" />
        </ScrollViewer>
 



            <ContentControl Grid.Column="1" 
                        VerticalAlignment="Top" 
                        HorizontalAlignment="Center" Name="MainRegion" 
                        cal:RegionManager.RegionName="MainRegion" />



    </Grid>
</Window>
