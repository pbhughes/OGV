<Window x:Class="OGV2P.Shell"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:cal="http://www.codeplex.com/prism"
        Title="OGV2" 
        WindowState="Maximized"
        WindowStartupLocation="CenterScreen">
    <Window.Resources>

    </Window.Resources>
    <Grid Margin="2">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"  /> 
            <ColumnDefinition Width="auto" />
            <ColumnDefinition Width="*"  />
        </Grid.ColumnDefinitions>
        
        <Grid.RowDefinitions>
            <RowDefinition />
            <RowDefinition Height="300"  />
            <RowDefinition />
        </Grid.RowDefinitions>


        <ContentControl Grid.Column="0" Grid.RowSpan="3" VerticalAlignment="Center"
                        Name="SideBarRegion" 
                        cal:RegionManager.RegionName="SideBarRegion"
                        Background="AliceBlue" />


        <Border Grid.Column="1" Grid.Row="1" 
                Margin="10" CornerRadius="8" Background="LightBlue">
            <ContentControl Panel.ZIndex="200" MaxHeight="300" 
                         Name="MiddleRegion" VerticalAlignment="Center"
                        HorizontalAlignment="Center"
                        cal:RegionManager.RegionName="MiddleRegion" />
        </Border>
        

        <ContentControl Grid.Column="2" Grid.RowSpan="3"
                         Name="MainRegion" 
                        cal:RegionManager.RegionName="MainRegion" />



    </Grid>
</Window>
