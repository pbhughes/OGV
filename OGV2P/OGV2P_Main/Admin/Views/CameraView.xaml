<UserControl x:Class="OGV2P.Admin.Views.CameraView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:tk="http://schemas.xceed.com/wpf/xaml/toolkit"
             xmlns:vu="clr-namespace:AudioVUMeter.Controls;assembly=AudioVUMeterWPFControl"
             xmlns:frms="clr-namespace:System.Windows.Forms;assembly=System.Windows.Forms"
             mc:Ignorable="d" 
             d:DesignHeight="800" d:DesignWidth="800">
    <UserControl.Resources>
        
 

    </UserControl.Resources>
    <Grid Background="Lavender" >
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="Auto" />
            <ColumnDefinition Width="Auto" />
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>
        <StackPanel Grid.Column="0" Grid.Row="0" Orientation="Vertical" Width="Auto">
            <StackPanel Orientation="Horizontal">
                <Label>Cameras</Label>
                <ComboBox x:Name="cboCameras" ItemsSource="{Binding Cameras}" ></ComboBox>
            </StackPanel>
            <StackPanel Orientation="Horizontal">
                <Label>Microphones</Label>
                <ComboBox x:Name="cboMicrophones" ItemsSource="{Binding Microphones}" SelectionChanged="cboMicrophones_SelectionChanged"  ></ComboBox>
            </StackPanel>
            <StackPanel Orientation="Horizontal">
                <Label>Title</Label>
                <TextBox x:Name="txtTitle"  Text="{Binding Title}" />
            </StackPanel>

        </StackPanel>
        <StackPanel Grid.Column="1" Grid.Row="0" Orientation="Vertical">
            <StackPanel Orientation="Horizontal">
                <Label>Recorders</Label>
                <ComboBox x:Name="cboRecorders" 
                          ItemsSource="{Binding RemoteRecorders}" 
                          DisplayMemberPath="Name" SelectedItem="{Binding CurrentRecorder}"></ComboBox>
            </StackPanel>


            <StackPanel Orientation="Horizontal">
                <Label>Folders</Label>
                <ComboBox x:Name="cboFolders" 
                          ItemsSource="{Binding FolderList}" 
                          DisplayMemberPath="Name" SelectedItem="{Binding CurrentFolder}"></ComboBox>
            </StackPanel>
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                <Button x:Name="cmdStartRecording" Style="{StaticResource btn-primary}" Margin="10" Width="100"
                        FontSize="15" Command="{Binding StartRecording}">REC</Button>
                <Button x:Name="cmdStopRecording"  Style="{StaticResource btn-danger}" Margin="10" Width="100"
                        FontSize="15" Command="{Binding StopRecording}" >STOP</Button>
            </StackPanel>

        </StackPanel>
        <StackPanel Grid.Row="1" Grid.Column="0" HorizontalAlignment="Center"
                    Grid.ColumnSpan="2" Orientation="Vertical" >
            <StackPanel Orientation="Horizontal">
                <vu:AudioChannelVUMeter x:Name="vuMeter" Height="25px" 
                                        Margin="5 5 0 5" 
                                        HorizontalAlignment="Stretch"></vu:AudioChannelVUMeter>
                <tk:BusyIndicator IsBusy="{Binding IsBusy}"></tk:BusyIndicator>
            </StackPanel>
            <Button Click="Button_Click">Load View</Button>
            <WindowsFormsHost Width="800" Height="600" >
                <frms:Panel x:Name="videoPanel" Width="800" Height="600" BackColor="WhiteSmoke"></frms:Panel>
            </WindowsFormsHost>
        </StackPanel>
    </Grid>
</UserControl>
