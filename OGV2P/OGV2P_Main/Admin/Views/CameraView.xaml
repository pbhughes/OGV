<UserControl x:Class="OGV2P.Admin.Views.CameraView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:tk="http://schemas.xceed.com/wpf/xaml/toolkit"
             xmlns:frms="clr-namespace:System.Windows.Forms;assembly=System.Windows.Forms"
             mc:Ignorable="d" 
             d:DesignHeight="800" d:DesignWidth="900">
    <UserControl.Resources>
    </UserControl.Resources>
    <Grid Background="Lavender" >
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="400" />
            <ColumnDefinition Width="450" />
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>
        <StackPanel Grid.Column="0" Grid.Row="0" Orientation="Vertical" Width="Auto">
            <StackPanel Orientation="Horizontal">
                <Label>Cameras</Label>
                <ComboBox x:Name="cboCameras" ItemsSource="{Binding Cameras}" ></ComboBox>
            </StackPanel>
            <StackPanel Orientation="Horizontal">
                <Label>Microphones</Label>
                <ComboBox x:Name="cboMicrophones" ItemsSource="{Binding Microphones}" SelectionChanged="cboMicrophones_SelectionChanged"  ></ComboBox>
            </StackPanel>
            <StackPanel Orientation="Horizontal">
                <Label>Recorders</Label>
                <ComboBox x:Name="cboRecorders" 
                          ItemsSource="{Binding RemoteRecorders}" 
                          DisplayMemberPath="Name" SelectedItem="{Binding CurrentRecorder}"></ComboBox>
            </StackPanel>


            <StackPanel Orientation="Horizontal">
                <Label>Folders</Label>
                <ComboBox x:Name="cboFolders" 
                          ItemsSource="{Binding FolderList}" 
                          DisplayMemberPath="Name" SelectedItem="{Binding CurrentFolder}"></ComboBox>
            </StackPanel>
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                <Button x:Name="cmdStartRecording" Style="{StaticResource btn-primary}" Margin="10" Width="100"
                        FontSize="15" Command="{Binding StartRecording}">REC</Button>
                <Button x:Name="cmdStopRecording"  Style="{StaticResource btn-danger}" Margin="10" Width="100"
                        FontSize="15" Command="{Binding StopRecording}" >STOP</Button>
            </StackPanel>

        </StackPanel>
        <StackPanel Grid.Column="1" Grid.Row="0" 
                    Orientation="Vertical" Width="450">


            <StackPanel Orientation="Horizontal" Width="445" Margin="5">
                <Label Width="50">Status</Label>
                <TextBlock x:Name="txtStatus" TextAlignment="Center" VerticalAlignment="Center" TextTrimming="CharacterEllipsis" Text="{Binding SessionService.CurrentSession.StatusMessage}"></TextBlock>
            </StackPanel>

            <StackPanel Orientation="Horizontal" Width="445" Margin="5">
                <Label Width="50">IOS</Label>
                <TextBlock x:Name="txtIOSUrl" TextAlignment="Center" VerticalAlignment="Center" TextTrimming="CharacterEllipsis" Text="{Binding SessionService.CurrentSession.IosVideoUrl}"></TextBlock>
            </StackPanel>

            <StackPanel Orientation="Horizontal" Width="445" Margin="5">
                <Label Width="50">MP4</Label>
                <TextBlock x:Name="txtMP4" TextAlignment="Center" VerticalAlignment="Center" TextTrimming="CharacterEllipsis" Text="{Binding SessionService.CurrentSession.MP4Url}"></TextBlock>
            </StackPanel>

            <StackPanel Orientation="Horizontal" Width="445" Margin="5">
                <Label Width="50">URL</Label>
                <TextBlock x:Name="txtSharePage" 
                           Width="325"
                           TextAlignment="Center" 
                           VerticalAlignment="Center" 
                           Text="{Binding SessionService.CurrentSession.SharePageUrl}"
                           ScrollViewer.VerticalScrollBarVisibility="Disabled"></TextBlock>
            </StackPanel>


        </StackPanel>
        <StackPanel Grid.Row="1" Grid.Column="0" HorizontalAlignment="Stretch"
                    Grid.ColumnSpan="2" Orientation="Vertical">
            <ProgressBar  x:Name="vuMeter" Height="10px" 
                                        Margin="0 5 0 5" 
                                        HorizontalAlignment="Stretch"></ProgressBar>
            <tk:BusyIndicator IsBusy="{Binding IsBusy}"></tk:BusyIndicator>
            <WindowsFormsHost Margin="10" HorizontalAlignment="Left" Height="400" Width="400">
                <frms:Panel x:Name="videoPanel" BackColor="WhiteSmoke"
                            ></frms:Panel>
            </WindowsFormsHost>
        </StackPanel>
    </Grid>
</UserControl>
