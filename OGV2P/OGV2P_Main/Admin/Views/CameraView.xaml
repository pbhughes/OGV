<UserControl x:Class="OGV2P.Admin.Views.CameraView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:tk="http://schemas.xceed.com/wpf/xaml/toolkit"
             xmlns:frms="clr-namespace:System.Windows.Forms;assembly=System.Windows.Forms"
             xmlns:ax="clr-namespace:AxRTMPActiveX;assembly=AxInterop.RTMPActiveX"
             mc:Ignorable="d" 
             Loaded="UserControl_Loaded"
             d:DesignHeight="1024" d:DesignWidth="900">
    <UserControl.Resources>
    </UserControl.Resources>
    
    <Grid Background="Lavender" >
        <Grid.RowDefinitions>
            <RowDefinition Height="500"/>
            <RowDefinition Height="10" />
            <RowDefinition Height="300" />
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="400" />
            <ColumnDefinition Width="450" />
        </Grid.ColumnDefinitions>


        <WindowsFormsHost Grid.Row="0" Grid.Column="0" Grid.ColumnSpan="2"
                          x:Name="winFrmHost" 
                          Width="640" Height="420" 
                          HorizontalAlignment="Center" >
            <!--<ax:AxRTMPActiveX x:Name="axRControl"></ax:AxRTMPActiveX>-->
        </WindowsFormsHost>

        <Grid Grid.Row="1" Grid.Column="0" Grid.ColumnSpan="2">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="45" />
            </Grid.ColumnDefinitions>
            <ProgressBar  x:Name="vuMeter" Height="10px" Grid.Column="0"
                                        Margin="0 5 0 5" 
                                        HorizontalAlignment="Stretch"></ProgressBar>
            <TextBlock x:Name="txtAudioLevel" Grid.Column="1"
                       HorizontalAlignment="Left"
                       TextAlignment="Left"></TextBlock>
        </Grid>

        <Grid Grid.Row="2" Grid.Column="0" Grid.ColumnSpan="2">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="100" />
                <ColumnDefinition Width="*" />
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition />
                <RowDefinition />
                <RowDefinition />
                <RowDefinition />
                <RowDefinition />
                <RowDefinition Height="Auto" />
            </Grid.RowDefinitions>

            <Label Grid.Column="0" Grid.Row="0">Cameras:</Label>
            <ComboBox Grid.Column="1" Grid.Row="0" x:Name="cboCameras"  Width="500" 
                          VerticalContentAlignment="Center"
                          SelectionChanged="cboCameras_SelectionChanged"></ComboBox>

            <Label Grid.Column="0" Grid.Row="1">Microphones</Label>
            <ComboBox Grid.Column="1" Grid.Row="1" x:Name="cboMicrophones" 
                          Width="500" 
                          VerticalContentAlignment="Center"
                          SelectionChanged="cboMicrophones_SelectionChanged"></ComboBox>
            
            <StackPanel Grid.Row="2" Grid.ColumnSpan="2" Orientation="Horizontal" HorizontalAlignment="Center">
                <Button x:Name="cmdPreview" 
                        Style="{StaticResource btn-info}" Margin="10" Width="100"
                        FontSize="15" Click="cmdPreview_Click">Stamp</Button>
                <Button x:Name="cmdStartRecording"
                        IsEnabled="{Binding Path=IsBusy, Converter={StaticResource InverseBoolConverter}}"
                        Click="cmdStartRecording_Click"  Style="{StaticResource btn-primary}" Margin="10" Width="100"
                        FontSize="15">REC</Button>
                <Button x:Name="cmdStopRecording"
                        IsEnabled="{Binding IsBusy}"
                        Click="cmdStopRecording_Click"  Style="{StaticResource btn-danger}" Margin="10" Width="100"
                        FontSize="15">STOP</Button>
                <Button x:Name="cmdStamp" 
                        IsEnabled="{Binding IsBusy}"
                        Style="{StaticResource btn-info}" Margin="10" Width="100"
                        FontSize="15" Click="cmdStamp_Click">Stamp</Button>
                <TextBlock x:Name="txtLastStamp"></TextBlock>
            </StackPanel>

            <Label Grid.Column="0" Grid.Row="3" Width="75" MinWidth="50">Status</Label>
            <TextBlock Grid.Column="1" Grid.Row="3" x:Name="txtStatus" TextAlignment="Center" VerticalAlignment="Center" TextTrimming="CharacterEllipsis" Text="{Binding SessionService.CurrentSession.StatusMessage}"></TextBlock>

            <Label Grid.Column="0" Grid.Row="4" Width="75" MinWidth="50">CPU</Label>
            <TextBlock Grid.Column="1" Grid.Row="4" x:Name="txtCpuUsage" TextAlignment="Center" VerticalAlignment="Center" TextTrimming="CharacterEllipsis" Text="{Binding SessionService.CurrentSession.StatusMessage}"></TextBlock>

            <Expander Grid.Column="0" Grid.Row="5">
                <StackPanel Orientation="Vertical">
                    <StackPanel Orientation="Horizontal"  Margin="5">
                        <Label Width="75" MinWidth="50">Local File</Label>
                        <ScrollViewer VerticalScrollBarVisibility="Hidden">
                            <TextBlock x:Name="txtLocalFile" Margin="0 0 5 0"
                               MinWidth="500"
                           TextAlignment="left" 
                           VerticalAlignment="Center"></TextBlock>
                        </ScrollViewer>
                        <Button Style="{StaticResource btn-primary-small}" Click="PreviewLocalFileLocation">Open Folder</Button>
                    </StackPanel>

                    <StackPanel Orientation="Horizontal" Margin="5">
                        <Label Width="75" MinWidth="50">URL</Label>
                        <ScrollViewer VerticalScrollBarVisibility="Hidden">
                            <TextBlock x:Name="txtUrl" Margin="0 0 5 0"
                               MinWidth="500"
                           TextAlignment="left" 
                           VerticalAlignment="Center" 
                           Text="{Binding SessionService.CurrentSession.SharePageUrl}"></TextBlock>
                        </ScrollViewer>
                        <Button Style="{StaticResource btn-primary-small}"
                        Click="cmdPreviewVideo_CLick"
                        RenderTransformOrigin="0.5,0.506">Preview Url</Button>
                    </StackPanel>
                </StackPanel>
               
            </Expander>
        </Grid>

     
           

        




        
        <StackPanel Grid.Row="0" Grid.Column="0" HorizontalAlignment="Center"
                    Grid.ColumnSpan="2" Orientation="Vertical">

           
           
        </StackPanel>
    </Grid>
</UserControl>
